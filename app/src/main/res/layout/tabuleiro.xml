<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/gridlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:padding="10dp"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/botao"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/imageView2"
            android:layout_marginStart="47dp"
            android:layout_marginEnd="47dp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/imageButton2"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/imageButton4"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/imageButton" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:elevation="10dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/cima"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
            app:layout_constraintRight_toRightOf="@+id/imageView2"
            android:layout_marginTop="51dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="50dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimaryDark"
            android:elevation="10dp"
            android:src="@drawable/direita"
            android:layout_marginStart="94dp"
            android:layout_marginEnd="93dp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintRight_toRightOf="@+id/imageButton6"
            android:layout_marginTop="101dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="99dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageButton"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginStart="28dp"
            android:elevation="10dp"
            android:src="@drawable/esquerda"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:elevation="10dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/baixo"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/imageView2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/imageView2" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="35dp"
            android:layout_height="0dp"
            android:elevation="10dp"
            android:src="@drawable/play"
            android:onClick="play"
            android:background="@color/colorPrimaryDark"
            android:layout_marginEnd="37dp"
            app:layout_constraintRight_toLeftOf="@+id/imageButton5"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/imageButton3"
            android:layout_marginTop="59dp"
            android:layout_marginBottom="58dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:elevation="10dp"
            android:src="@drawable/pause"
            android:onClick="pause"
            android:background="@color/colorPrimaryDark"
            android:layout_marginEnd="57dp"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton6"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="@string/salvaesair"
            android:textColor="@color/letras"
            android:textSize="18dp"
            android:elevation="10dp"
            android:padding="10dp"
            android:onClick="salvar"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:id="@+id/button3"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginEnd="36dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="131dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pontuação: "
            android:textColor="@color/letras"
            android:textSize="18dp"
            android:fontFamily="casual"
            android:textStyle="bold"
            tools:layout_constraintTop_creator="1"
            android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/button3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/letras"
            android:textSize="18dp"
            android:fontFamily="casual"
            android:textStyle="bold"
            tools:layout_constraintRight_creator="1"
            android:layout_marginEnd="36dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
            tools:layout_constraintBaseline_creator="1" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>