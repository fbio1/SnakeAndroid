<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/gridlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="center_vertical|center_horizontal"
        android:padding="10dp"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="370dp"
        tools:layout_editor_absoluteX="0dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:src="@drawable/botao"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/imageView2"
            android:layout_marginEnd="51dp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton3"
            app:layout_constraintRight_toRightOf="@+id/imageButton2"
            android:layout_marginTop="47dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="46dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageButton"
            app:layout_constraintTop_toTopOf="@+id/imageButton4"
            app:layout_constraintHorizontal_bias="0.524"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:elevation="10dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/cima"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/imageButton3"
            android:layout_marginTop="57dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/imageButton3"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:background="@color/colorPrimaryDark"
            android:elevation="10dp"
            android:src="@drawable/direita"
            android:layout_marginStart="58dp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/imageButton3"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="3dp"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintLeft_toRightOf="@+id/imageButton" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginStart="34dp"
            android:elevation="10dp"
            android:src="@drawable/esquerda"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            android:layout_marginLeft="34dp"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="10dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/baixo"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="48dp"
            app:layout_constraintRight_toRightOf="@+id/imageButton2"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/imageButton4"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/imageButton" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="35dp"
            android:layout_height="0dp"
            android:layout_marginEnd="21dp"
            android:elevation="10dp"
            android:src="@drawable/play"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintRight_toLeftOf="@+id/imageButton5"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton5"
            app:layout_constraintTop_toTopOf="@+id/imageButton5" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:elevation="10dp"
            android:src="@drawable/pause"
            android:background="@color/colorPrimaryDark"
            android:layout_marginEnd="48dp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="57dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pontuação: "
            android:textSize="18dp"
            android:layout_marginStart="21dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toRightOf="@+id/imageButton2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18dp"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="57dp"
            app:layout_constraintLeft_toRightOf="@+id/textView2" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>